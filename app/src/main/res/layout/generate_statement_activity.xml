<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99FBE5F7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_gradient">
            <TextView
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:layout_marginLeft="170dp"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
            <Spinner
                android:id="@+id/day_spinner"
                android:layout_width="150dp"
                android:layout_below="@+id/d"
                android:layout_height="50dp"
                android:entries="@array/days"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/text_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="Month"
                android:layout_below="@+id/day_spinner"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
            <Spinner
                android:id="@+id/month_spinner"
                android:layout_width="150dp"
                android:layout_below="@+id/text_m"
                android:layout_height="50dp"
                android:entries="@array/months"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/text_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:layout_marginLeft="170dp"
                android:textColor="@color/black"
                android:layout_below="@+id/month_spinner"
                android:textSize="20sp"></TextView>
            <Spinner
                android:id="@+id/year_spinner"
                android:layout_width="150dp"
                android:layout_below="@+id/text_y"
                android:layout_height="50dp"
                android:entries="@array/years"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/gen_single_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#003b59"
            android:text="Generate Statement"></Button>
    </RelativeLayout>

</LinearLayout>