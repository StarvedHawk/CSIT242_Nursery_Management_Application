<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".buildNursery"
    android:background="#F8E0E0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Nursery Information"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_staff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <EditText
                android:id="@+id/build_branch"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:hint="Branch Name"
                android:textColorHint="@color/white"></EditText>
        </RelativeLayout>

        <EditText
            android:id="@+id/build_min_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Initial Charge Amount"
            android:textColorHint="@color/white"></EditText>
        <EditText
            android:id="@+id/build_max_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:hint="Extra Time Charge"
            android:textColorHint="@color/white"></EditText>
        <TextView
            android:id="@+id/build_modify_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>

        <Spinner
            android:id="@+id/build_hour_spinner"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/build_modify_hours"
            android:layout_gravity="center"
            android:entries="@array/m_hours" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <Button
            android:id="@+id/build_b_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Insert"
            android:backgroundTint="@color/white"
            android:textColor="@color/red_black"
            android:textSize="20sp"></Button>
    </RelativeLayout>
</LinearLayout>