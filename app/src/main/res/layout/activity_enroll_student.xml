<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnrollStudentActivity"
    android:background="#99FBE5F7">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Student Information"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"></TextView>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/background_gradient">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <EditText
                    android:id="@+id/f_name_id"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:hint="First Name"
                    android:textColorHint="@color/black"
                    ></EditText>
                <EditText
                    android:id="@+id/second_name_id"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:hint="Family Name"
                    android:textColorHint="@color/black"
                    android:layout_alignParentRight="true"
                    ></EditText>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <EditText
                    android:id="@+id/dob_id"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textColorHint="@color/black"
                    android:hint="Date of Birth"></EditText>
                <EditText
                    android:id="@+id/p_numb_id"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:hint="Parent Number"
                    android:textColorHint="@color/black"
                    android:layout_alignParentRight="true"
                    ></EditText>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <EditText
                    android:id="@+id/email_id"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:hint="Parent Email"
                    android:textColorHint="@color/black"
                    ></EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">


            </RelativeLayout>
        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/enroll_b_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Enroll"
        android:backgroundTint="#003b59"
        android:textSize="20sp"></Button>
    </RelativeLayout>
</LinearLayout>